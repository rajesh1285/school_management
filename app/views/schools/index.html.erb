<h1>List of schools</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Recognized</th>
      <th scope="col">Address</th>
      <th scope="col">Phone</th>
      <th scope="col">principal_name</th>
      <th><%= link_to 'New', new_school_path %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @schools.each do |school| %>
        <tr>
          <td><%= school.id %></td>
          <td><%= school.name %></td>
          <td><%= school.recognized %></td>
          <td><%= school.address %></td>
          <td><%= school.phone %></td>
          <td><%= school.principal.name %></td>
          <td><%= link_to 'Show', school_path(school) %></td>
          <td><%= link_to 'New', new_school_path %></td>
          <td><%= link_to 'Edit', edit_school_path(school) %></td>
          <td><%= link_to 'Destroy', school_path(school),method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
  </tbody>
</table>
